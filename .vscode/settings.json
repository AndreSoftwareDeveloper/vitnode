{
  "cSpell.words": [
    "clsx",
    "Codegen",
    "commitlint",
    "hookform",
    "lucide",
    "nestjs",
    "nextra",
    "sonner",
    "stylelint",
    "tailwindcss",
    "tanstack",
    "testid",
    "uagent",
    "vitnode"
  ],
  "stylelint.validate": ["css", "scss"],
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "eslint.workingDirectories": ["frontend", "backend"]
}
