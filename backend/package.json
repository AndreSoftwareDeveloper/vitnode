{
  "name": "vitnode_backend",
  "author": "Maciej Piotr (aXenDev) Balcerzak",
  "license": "GPL-3.0 license",
  "scripts": {
    "db": "drizzle-kit push:pg",
    "config:init": "ts-node ./functions/config/generate-config-file.ts",
    "config:finish": "ts-node ./functions/config/finish-build-config-file.ts",
    "migrate:forum": "drizzle-kit generate:pg --out modules/forum/admin/database/migrations --schema modules/forum/admin/database/schema/*.ts",
    "migrate:admin": "drizzle-kit generate:pg --out modules/core/admin/database/migrations --schema modules/core/admin/database/schema/*.ts",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "cross-env NODE_ENV=development pnpm config:finish && cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --w",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t vitnode_backend .",
    "docker:run": "docker run -p 8080:8080 vitnode_backend",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.6",
    "date-fns": "^3.6.0",
    "drizzle-orm": "^0.30.4",
    "graphql": "^16.8.1",
    "object-path": "^0.11.8",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "tar": "^6.2.1",
    "ua-parser-js": "^1.0.37"
  },
  "devDependencies": {
    "@apollo/server": "^4.10.2",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/typescript": "^4.0.6",
    "@graphql-codegen/typescript-document-nodes": "^4.0.6",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@nestjs/apollo": "^12.1.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.5",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.5",
    "@nestjs/graphql": "^12.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.3.5",
    "@nestjs/platform-socket.io": "^10.3.5",
    "@nestjs/schedule": "^4.0.1",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/serve-static": "^4.0.1",
    "@nestjs/testing": "^10.3.5",
    "@types/archiver": "^6.0.2",
    "@types/bcrypt": "^5.0.2",
    "@types/busboy": "^1.5.3",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/object-path": "^0.11.4",
    "@types/pg": "^8.11.4",
    "@types/supertest": "^6.0.2",
    "@types/tar": "^6.1.11",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "http-errors": "^2.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3"
  }
}
