{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-vitnode/tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "dist",
    "declaration": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
