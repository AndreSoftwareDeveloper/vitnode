{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-vitnode/tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["scripts/**/*"]
}
