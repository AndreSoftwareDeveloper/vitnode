{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "eslint-config-vitnode/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "src/**/*"],
  "exclude": ["codegen.ts", "scripts/**/*"]
}
